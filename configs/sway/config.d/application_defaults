for_window [app_id="yad"] floating enable
for_window [title="(?:Open|Save) (?:File|Folder|As)"] floating enable, resize set width 50 ppt height 60 ppt
for_window [window_role = "GtkFileChooserDialog"] loating enable, resize set width 50 ppt height 60 ppt
